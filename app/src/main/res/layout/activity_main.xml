<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sg.edu.nus.sensors.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        android:id="@+id/button1"
        android:onClick="goToCamera"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accelerometer"
        android:id="@+id/button2"
        android:onClick="goToAccelerometer"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get 'Cheese' sample"
        android:id="@+id/button6"
        android:onClick="goToGetCheeseSample"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio_accelerometer"
        android:id="@+id/button3"
        android:onClick="getAudioAndAccelerometerData"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_reader"
        android:id="@+id/button4"
        android:onClick="goToDataReader"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get video"
        android:id="@+id/button5"
        android:onClick="goToVideoRecorder"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Picture at certain frame"
        android:id="@+id/button7"
        android:onClick="goToViewPicture"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pattern Recog"
        android:id="@+id/button8"
        android:onClick="goToPatternRecog"
        />
</LinearLayout>
